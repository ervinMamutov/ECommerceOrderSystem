# ==============================================
# E-COMMERCE ORDER SYSTEM - ENVIRONMENT VARIABLES
# ==============================================
# Copy this file to .env and fill in your actual values
# NEVER commit the .env file to version control!

# -------------------- Database Configuration --------------------
# PostgreSQL connection details
DB_HOST=localhost
DB_PORT=5432
DB_NAME=ecommerce_db
DB_USERNAME=your_database_username
DB_PASSWORD=your_secure_password

# -------------------- Application Configuration --------------------
# Active Spring profile (dev, prod, test)
SPRING_PROFILES_ACTIVE=dev

# Server port
SERVER_PORT=8080

# -------------------- Security Configuration --------------------
# JWT Secret Key (generate a strong random string for production)
# Example: openssl rand -base64 64
JWT_SECRET=change-this-to-a-secure-random-string-in-production
JWT_EXPIRATION_MS=86400000

# -------------------- Payment Integration --------------------
# Payment gateway API credentials (stub for now)
PAYMENT_API_KEY=test_key_replace_in_production
PAYMENT_API_SECRET=test_secret_replace_in_production
PAYMENT_GATEWAY_URL=https://sandbox.payment-provider.com

# -------------------- Email Configuration --------------------
# Email service for order notifications (optional)
MAIL_HOST=smtp.example.com
MAIL_PORT=587
MAIL_USERNAME=your_email@example.com
MAIL_PASSWORD=your_email_password

# -------------------- Logging Configuration --------------------
# Logging level (TRACE, DEBUG, INFO, WARN, ERROR)
LOG_LEVEL=INFO

# -------------------- Other Configuration --------------------
# Application base URL
APP_BASE_URL=http://localhost:8080

# Enable/disable features
FEATURE_PAYMENT_ENABLED=true
FEATURE_EMAIL_NOTIFICATIONS=false
